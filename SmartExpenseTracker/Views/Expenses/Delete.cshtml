@model Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container my-5">
    <h2 class="text-center text-danger mb-4">Delete Expense</h2>

    <div class="alert alert-warning text-center shadow-sm p-3 rounded">
        <h4 class="mb-3">Are you sure you want to delete this expense?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="bg-light p-4 rounded shadow-sm">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3 fw-bold">Amount</dt>
            <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-3 fw-bold">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
        </dl>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <form asp-action="Delete" method="post" class="me-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>
