@model IEnumerable<Expense>

<div class="container my-5">
    <h2 class="text-center text-primary mb-4">Expense List</h2>

    <div class="table-responsive shadow-lg rounded">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Description</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Date</th>
                    <th scope="col">Category</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Description</td>
                        <td>$@expense.Amount.ToString("")</td>
                        <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                        <td>@expense.Category?.Name</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary mx-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-danger mx-1"
                               onclick="return confirm('Are you sure you want to delete this expense?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a href="/Expenses/Create" class="btn btn-success me-2">Add Expense</a>
        <a href="/Category/Create" class="btn btn-success me-2">Add Category</a>
        <a href="/Expenses/SpendingPrediction" class="btn btn-info">View Spending Prediction</a>
        
    </div>
</div>
