@model SmartExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container">
    <h2>Delete Category</h2>
    <p>Are you sure you want to delete the category "<strong>@Model.Name</strong>"?</p>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken() <!-- Add anti-forgery token for CSRF protection -->
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
